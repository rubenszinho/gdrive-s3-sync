# ============================================
# GDrive-S3 Sync Service - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ========== Google Drive Configuration ==========
# Service Account JSON - can be the raw JSON or base64 encoded
# Get this from Google Cloud Console > IAM > Service Accounts
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project",...}

# Google Drive folder name to sync from
GDRIVE_FOLDER=fire-risk-predictor

# Set to true if the folder is shared with the service account (not owned by it)
GDRIVE_SHARED_WITH_ME=true

# ========== S3 Configuration ==========
# S3-compatible endpoint URL (MinIO, AWS S3, etc.)
# Examples:
#   MinIO: https://minio.example.com
#   AWS S3: https://s3.amazonaws.com
#   DigitalOcean Spaces: https://nyc3.digitaloceanspaces.com
S3_ENDPOINT=https://minio.example.com

# S3 Access credentials
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# S3 bucket name
S3_BUCKET=fire-risk-predictor

# S3 provider (Minio, AWS, DigitalOcean, Wasabi, etc.)
# See: https://rclone.org/s3/#provider
S3_PROVIDER=Minio

# S3 region (required for AWS S3, optional for others)
S3_REGION=

# ========== Sync Schedule ==========
# Cron expression for sync schedule
# Format: minute hour day_of_month month day_of_week
#
# Examples:
#   "0 6,18 * * *"     = 6 AM and 6 PM daily (default - twice a day)
#   "0 */6 * * *"      = Every 6 hours
#   "0 0 * * *"        = Daily at midnight
#   "0 0 * * 0"        = Weekly on Sunday at midnight
#   "*/30 * * * *"     = Every 30 minutes (for testing)
#
SYNC_CRON_SCHEDULE=0 6,18 * * *

# ========== Sync Options ==========
# Number of parallel file transfers
SYNC_TRANSFERS=10

# Number of parallel file checkers  
SYNC_CHECKERS=10

# Number of retries for failed transfers
SYNC_RETRIES=5

# Dry run mode - simulate without making changes (for testing)
SYNC_DRY_RUN=false

# Force full sync - delete everything from S3 and re-upload
SYNC_FORCE_FULL=false

# Comma-separated list of critical files to verify after sync
CRITICAL_FILES=sisam_focos_2003.csv,RF.pkl,MLP.pkl,XGBoost.pkl

# ========== Service Configuration ==========
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API port (for health checks and manual triggers)
API_PORT=8080

# Flower monitoring dashboard port
FLOWER_PORT=5555
